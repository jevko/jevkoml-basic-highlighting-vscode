{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "jevkoml",
  "patterns": [
    {
      "include": "#disabled"
    },
    {
      "include": "#disabled-heredoc"
    },
    {
      "include": "#attr"
    },
    {
      "include": "#directive"
    },
    {
      "include": "#tag"
    },
    {
      "include": "#heredoc"
    }
  ],
  "repository": {
    "digraph": {
      "match": "`[`\\[\\]]",
      "name": "constant.character.escape.jevkoml"
    },
    "digraph2": {
      "match": "`[`\\[\\]]",
      "name": "string.regexp.jevkoml"
    },
    "disabled": {
      "name": "comment.jevkoml",
      "begin": "\\s*(\\\\)?-((`[`\\[\\]])|[^`\\[\\]])*\\[",
      "end": "\\]",
      "patterns": [
        {
          "include": "#brackets-disabled"
        }
      ]
    },
    "disabled-heredoc": {
      "name": "comment.jevkoml",
      "begin": "\\s*(?:\\\\)?-(?:(?:`[`\\[\\]])|[^`\\[\\]])*`/([^/]*)/",
      "end": "/\\1/"
    },
    "brackets-disabled": {
      "name": "comment.jevkoml",
      "begin": "\\[",
      "end": "\\]",
      "patterns": [
        {
          "include": "#brackets-disabled"
        }
      ]
    },
    "text": {
      "name": "keyword.jevkoml",
      "begin": "(?=(\\\\|^)((`[`\\[\\]])|[^`\\[\\]])+\\\\)",
      "end": "(?=\\\\|$)",
      "patterns": [
        {
          "include": "#digraph2"
        }
      ]
    },
    "attr": {
      "name": "entity.other.attribute-name.jevkoml",
      "begin": "(((\\\\)?((`[`\\[\\]])|[^`\\[\\]\\\\])+|\\\\)=|\\.)(\\[)",
      "end": "(\\])",
      "patterns": [
        {
          "include": "#digraph2"
        },
        {
          "include": "#brackets-attr"
        },
        {
          "name": "string.jevkoml",
          "match": "."
        }
      ]
    },
    "brackets-attr": {
      "name": "invalid.illegal.jevkoml",
      "begin": "\\[",
      "end": "\\]",
      "patterns": [
        {
          "include": "#brackets-attr"
        }
      ]
    },
    "directive": {
      "name": "keyword.control.jevkoml",
      "begin": "(?=\\s*((\\\\)?/((`[`\\[\\]])|[^`\\[\\]\\\\])+|\\\\)(\\[|`/))",
      "end": "(?=(\\[|`/))",
      "patterns": [
        {
          "include": "#digraph2"
        }
      ]
    },
    "tag": {
      "name": "entity.name.tag.jevkoml",
      "begin": "(?=((\\\\)?((`[`\\[\\]])|[^`\\[\\]\\\\])+|\\\\)(\\[|`/))",
      "end": "(?=(\\[|`/))",
      "patterns": [
        {
          "include": "#digraph2"
        }
      ]
    },
    "prefix": {
      "name": "keyword.jevkoml",
      "begin": "(?=((`[`\\[\\]])|[^`\\[\\]])+\\[)",
      "end": "(?=\\[)",
      "patterns": [
        {
          "include": "#digraph2"
        }
      ]
    },
    "suffix": {
      "name": "string.jevkoml",
      "begin": "(?=((`[`\\[\\]])|[^`\\[\\]])+([^\\[]))",
      "end": "(?=\\3)",
      "patterns": [
        {
          "include": "#digraph"
        }
      ]
    },
    "heredoc": {
      "patterns": [
        {
          "include": "#heredoc_json"
        },
        {
          "include": "#heredoc_xml"
        },
        {
          "include": "#heredoc_html"
        },
        {
          "include": "#heredoc_css"
        },
        {
          "include": "#heredoc_ini"
        },
        {
          "include": "#heredoc_yaml"
        },
        {
          "include": "#heredoc_toml"
        },
        {
          "include": "#heredoc_default"
        }
      ]
    },
    "heredoc_default": {
      "begin": "`/([^/]*)/",
      "end": "/\\1/",
      "name": "string.jevko",
      "beginCaptures": {
        "0": {
          "name": "string.regexp.jevko"
        }
      },
      "endCaptures": {
        "0": {
          "name": "string.regexp.jevko"
        }
      }
    },
    "heredoc_json": {
      "begin": "`/(json|json5|sublime-settings|sublime-menu|sublime-keymap|sublime-mousemap|sublime-theme|sublime-build|sublime-project|sublime-completions)/",
      "end": "/\\1/",
      "beginCaptures": {
        "0": {
          "name": "string.regexp.jevko"
        }
      },
      "endCaptures": {
        "0": {
          "name": "string.regexp.jevko"
        }
      },
      "patterns": [
        {
          "include": "source.json"
        }
      ]
    },
    "heredoc_xml": {
      "begin": "`/(xml|xsd|tld|jsp|pt|cpt|dtml|rss|opml)/",
      "end": "/\\1/",
      "beginCaptures": {
        "0": {
          "name": "string.regexp.jevko"
        }
      },
      "endCaptures": {
        "0": {
          "name": "string.regexp.jevko"
        }
      },
      "patterns": [
        {
          "include": "text.xml"
        }
      ]
    },
    "heredoc_html": {
      "begin": "`/(html|htm|shtml|xhtml|inc|tmpl|tpl)/",
      "end": "/\\1/",
      "beginCaptures": {
        "0": {
          "name": "string.regexp.jevko"
        }
      },
      "endCaptures": {
        "0": {
          "name": "string.regexp.jevko"
        }
      },
      "patterns": [
        {
          "include": "text.html.basic"
        }
      ]
    },
    "heredoc_css": {
      "begin": "`/(css)/",
      "end": "/\\1/",
      "name": "meta.embedded.block.css",
      "beginCaptures": {
        "0": {
          "name": "string.regexp.jevko"
        }
      },
      "endCaptures": {
        "0": {
          "name": "string.regexp.jevko"
        }
      },
      "patterns": [
        {
          "include": "source.css"
        }
      ]
    },
    "heredoc_ini": {
      "begin": "`/(ini|conf)/",
      "end": "/\\1/",
      "beginCaptures": {
        "0": {
          "name": "string.regexp.jevko"
        }
      },
      "endCaptures": {
        "0": {
          "name": "string.regexp.jevko"
        }
      },
      "patterns": [
        {
          "include": "source.ini"
        }
      ]
    },
    "heredoc_yaml": {
      "begin": "`/(yaml|yml)/",
      "end": "/\\1/",
      "beginCaptures": {
        "0": {
          "name": "string.regexp.jevko"
        }
      },
      "endCaptures": {
        "0": {
          "name": "string.regexp.jevko"
        }
      },
      "patterns": [
        {
          "include": "source.yaml"
        }
      ]
    },
    "heredoc_toml": {
      "begin": "`/(toml)/",
      "end": "/\\1/",
      "beginCaptures": {
        "0": {
          "name": "string.regexp.jevko"
        }
      },
      "endCaptures": {
        "0": {
          "name": "string.regexp.jevko"
        }
      },
      "patterns": [
        {
          "include": "source.toml"
        }
      ]
    }
  },
  "scopeName": "source.jevkoml"
}
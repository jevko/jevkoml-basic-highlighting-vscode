{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "JevkoML",
	"patterns": [
		{
			"include": "#attr"
		},
		{
			"include": "#tag"
		},
		{
			"include": "#heredoc"
		}
	],
	"repository": {
		"digraph": {
			"match": "`[`\\[\\]]",
			"name": "constant.character.escape.jevkoml"
		},
		"digraph2": {
			"match": "`[`\\[\\]]",
			"name": "string.regexp.jevkoml"
		},
		"text": {
			"name": "keyword.jevkoml",
			"begin": "(?=(\\\\|^)((`[`\\[\\]])|[^`\\[\\]])+\\\\)",
			"end": "(?=\\\\|$)",
			"patterns": [
				{"include": "#digraph2"}
			]
		},
		"attr": {
			"name": "entity.other.attribute-name",
			"begin": "(((\\\\)?((`[`\\[\\]])|[^`\\[\\]\\\\])+|\\\\)=|\\.)(\\[)",
			"end": "(\\])",
			"patterns": [
				{"include": "#digraph2"},
				{"include": "#brackets"},
				{
					"name": "string.jevkoml",
					"match": "."
				}
			]
		},
		"brackets": {
			"name": "invalid.illegal.jevkoml",
			"begin": "\\[",
			"end": "\\]",
			"patterns": [
				{"include": "#brackets"}
			]
		},
		"tag": {
			"name": "entity.name.tag",
			"begin": "(?=((\\\\)?((`[`\\[\\]])|[^`\\[\\]\\\\])+|\\\\)(\\[|`/))",
			"end": "(?=(\\[|`/))",
			"patterns": [
				{"include": "#digraph2"}
			]
		},
		"prefix": {
			"name": "keyword.jevkoml",
			"begin": "(?=((`[`\\[\\]])|[^`\\[\\]])+\\[)",
			"end": "(?=\\[)",
			"patterns": [
				{"include": "#digraph2"}
			]
		},
		"suffix": {
			"name": "string.jevkoml",
			"begin": "(?=((`[`\\[\\]])|[^`\\[\\]])+([^\\[]))",
			"end": "(?=\\3)",
			"patterns": [
				{"include": "#digraph"}
			]
		},
		"heredoc": {
			"patterns": [
				{"include": "#heredoc_json"},
				{"include": "#heredoc_xml"},
				{"include": "#heredoc_html"},
				{"include": "#heredoc_css"},
				{"include": "#heredoc_ini"},
				{"include": "#heredoc_yaml"},
				{"include": "#heredoc_toml"},
				{"include": "#heredoc_default"}
			]
		},
		"heredoc_default": {
			"begin": "`/([^/]*)/",
			"end": "/\\1/",
			"name": "string.jevko",
			"beginCaptures": {
				"0": {"name": "string.regexp.jevko"}
			},
			"endCaptures": {
				"0": {"name": "string.regexp.jevko"}
			}
		},
		"heredoc_json": {
			"begin": "`/(json|json5|sublime-settings|sublime-menu|sublime-keymap|sublime-mousemap|sublime-theme|sublime-build|sublime-project|sublime-completions)/",
			"end": "/\\1/",
			"beginCaptures": {
				"0": {"name": "string.regexp.jevko"}
			},
			"endCaptures": {
				"0": {"name": "string.regexp.jevko"}
			},
			"patterns": [
				{
					"include": "source.json"
				}
			]
		},
		"heredoc_xml": {
			"begin": "`/(xml|xsd|tld|jsp|pt|cpt|dtml|rss|opml)/",
			"end": "/\\1/",
			"beginCaptures": {
				"0": {"name": "string.regexp.jevko"}
			},
			"endCaptures": {
				"0": {"name": "string.regexp.jevko"}
			},
			"patterns": [
				{
					"include": "text.xml"
				}
			]
		},
		"heredoc_html": {
			"begin": "`/(html|htm|shtml|xhtml|inc|tmpl|tpl)/",
			"end": "/\\1/",
			"beginCaptures": {
				"0": {"name": "string.regexp.jevko"}
			},
			"endCaptures": {
				"0": {"name": "string.regexp.jevko"}
			},
			"patterns": [
				{
					"include": "text.html.basic"
				}
			]
		},
		"heredoc_css": {
			"begin": "`/(css)/",
			"end": "/\\1/",
			"name": "meta.embedded.block.css",
			"beginCaptures": {
				"0": {"name": "string.regexp.jevko"}
			},
			"endCaptures": {
				"0": {"name": "string.regexp.jevko"}
			},
			"patterns": [{
				"include": "source.css"
			}]
		},
		"heredoc_ini": {
			"begin": "`/(ini|conf)/",
			"end": "/\\1/",
			"beginCaptures": {
				"0": {"name": "string.regexp.jevko"}
			},
			"endCaptures": {
				"0": {"name": "string.regexp.jevko"}
			},
			"patterns": [
				{
					"include": "source.ini"
				}
			]
		},
		"heredoc_yaml": {
			"begin": "`/(yaml|yml)/",
			"end": "/\\1/",
			"beginCaptures": {
				"0": {"name": "string.regexp.jevko"}
			},
			"endCaptures": {
				"0": {"name": "string.regexp.jevko"}
			},
			"patterns": [
				{
					"include": "source.yaml"
				}
			]
		},
		"heredoc_toml": {
			"begin": "`/(toml)/",
			"end": "/\\1/",
			"beginCaptures": {
				"0": {"name": "string.regexp.jevko"}
			},
			"endCaptures": {
				"0": {"name": "string.regexp.jevko"}
			},
			"patterns": [
				{
					"include": "source.toml"
				}
			]
		}
	},
	"scopeName": "source.jevkoml"
}